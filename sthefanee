<body>
  <div class="container">
    <h1>AI Prompt Generator</h1>
    
    <label>üéØ What‚Äôs your goal or topic?</label>
    <input type="text" id="goal" placeholder="e.g., create a social media calendar">

    <label>üë©‚Äçüíº Choose the AI role</label>
    <select id="role">
      <option value="expert marketer">Expert marketer</option>
      <option value="content writer">Content writer</option>
      <option value="teacher or tutor">Teacher / Tutor</option>
      <option value="developer or coder">Developer / Coder</option>
      <option value="business strategist">Business strategist</option>
      <option value="creative storyteller">Creative storyteller</option>
      <option value="custom">Custom (type below)</option>
    </select>

    <input type="text" id="customRole" placeholder="If custom, type your own role">

    <label>üó£Ô∏è Tone or Style</label>
    <select id="tone">
      <option value="professional">Professional</option>
      <option value="friendly">Friendly</option>
      <option value="persuasive">Persuasive</option>
      <option value="educational">Educational</option>
      <option value="storytelling">Storytelling</option>
    </select>

    <label>üìÑ Output Format</label>
    <select id="format">
      <option value="text paragraph">Text paragraph</option>
      <option value="list or outline">List / Outline</option>
      <option value="script or dialogue">Script / Dialogue</option>
      <option value="step-by-step plan">Step-by-step plan</option>
      <option value="template or framework">Template / Framework</option>
    </select>

    <button onclick="generatePrompt()">Generate Prompt</button>

    <div class="output" id="output" style="display:none;">
      <h3>üéØ Final AI Prompt:</h3>
      <p id="finalPrompt"></p>
      <p class="tip" id="promptTip"></p>
    </div>
  </div>

  <script>
    function generatePrompt() {
      const goal = document.getElementById('goal').value.trim();
      let role = document.getElementById('role').value;
      const customRole = document.getElementById('customRole').value.trim();
      const tone = document.getElementById('tone').value;
      const format = document.getElementById('format').value;
      if (role === 'custom' && customRole) role = customRole;

      if (!goal) {
        alert('Please enter your goal or topic.');
        return;
      }

      const prompt = `Act as a ${role}. Your task is to ${goal}. 
Write the response in a ${tone} tone and present it as a ${format}. 
Include clear structure, actionable insights, and creativity.`;

      const tip = `üí° Tip: Add more context (target audience, length, or platform) for an even better result.`;

      document.getElementById('finalPrompt').textContent = prompt;
      document.getElementById('promptTip').textContent = tip;
      document.getElementById('output').style.display = 'block';
    }
  </script>
